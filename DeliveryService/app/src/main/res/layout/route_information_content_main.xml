<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RouteInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/see_deliveries_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="seeDeliveries"
            android:text="See deliveries" />

        <Button
            android:id="@+id/map_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mapView"
            android:text="Map view" />


        <Button
            android:id="@+id/start_navigation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startNavigation"
            android:text="Start navigation" />
    </LinearLayout>

</RelativeLayout>